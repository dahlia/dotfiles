[user]
	name = Hong Minhee
	useConfigOnly = true
	signingkey = C429ECD57EED6CCA
[color]
	ui = auto
[alias]
	l = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr)%C(bold blue)<%an>%Creset' --abbrev-commit
	f = fetch --tags --all -p
	ci = commit
	co = switch --create
	st = status --short --branch
[log]
	date = iso8601
[core]
	editor = nvim
	excludesfile = /Users/dahlia/.gitignore_global
[pull]
	ff = only
[init]
	defaultBranch = main
[commit]
	gpgsign = true
[tag]
	gpgSign = true
[include]
	path = ~/.gitconfig_extra
