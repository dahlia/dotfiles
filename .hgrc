[ui]
username = Hong Minhee <hong@minhee.org>
editor = nvim

[alias]
diff = delta
l = log --graph --template "\x1B[35m{rev}\x1B[0m:\x1B[31m{node|short}\x1B[0m\x1B[33m{if(branch,' |{branch}|','')}\x1B[36m{if(tags,' [{tags}]','')}\x1B[0m {desc|strip|firstline|nonempty|fill68} \x1B[32m({date|age}) \x1B[34;1m<{author|person}>\x1B[0m\n"
record = commit --interactive

[extensions]
hgext.color =
hgext.extdiff =
hgext.gpg =
hgext.pager =
hgext.rebase =
hgext.shelve =
hgext.strip =
hgext.zeroconf =

[pager]
attend = l
pager = less -RS

[extdiff]
cmd.delta =
